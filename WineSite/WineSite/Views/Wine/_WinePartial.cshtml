@model WineServicesModel

<div class="col-md-4">
    <div class="card mb-3">
        <img class="card-img-top" src="@Model.ImageUrl" alt="House Image">
        <div class="card-body text-center">
            <h4>@Model.Name</h4>
            <h6>Address: <b>@Model.Name</b></h6>
            <h6>
                Price Per Month:
                <b>@String.Format("{0:f2}", Model.Price) BGN</b>
            </h6>
            
            <br />
            <a asp-controller="Wine" asp-action="Details" asp-route-id="@Model.Id"
               class="btn btn-success">Details</a>
            <a asp-controller="Wine" asp-action="AddToCart" asp-route-id="@Model.Id"
                   class="btn btn-danger">Купи</a>
                <p></p>
        </div>
    </div>
</div>
