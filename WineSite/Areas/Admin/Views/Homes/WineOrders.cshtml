@using WineSite.Models.Admin;

@model IEnumerable<WineOrderViewModel>

@{
    ViewBag.Title = "Поръчки, от клиенти";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    @{
        // Групиране на поръчките по FullName
        var groupedOrders = Model.GroupBy(order => order.FullName);
    }

    @foreach (var userGroup in groupedOrders)
    {
        // Извличане на името на потребителя от ключа на групата
        var userName = userGroup.Key;

        // Пропускане на групата, ако името е null
        if (userName != null)
        {
            <div class="user-container">
                <h5 class="user-title">Потребител: @userName</h5>
                <h5 class="user-address">Адрес: @userGroup.First().Address</h5>
                <h5 class="user-phonenumber">Телефон: @userGroup.First().Phonenumber</h5>
                <div class="orders-container">
                    @foreach (var order in userGroup)
                    {
                        <div class="card col-4" style="width: 20rem;">
                            <div class="card-body">
                                <hr />
                                <p class="mb-0"><span class="fw-bold">Име на вино: </span>@order.WineName</p>
                                <p class="mb-0"><span class="fw-bold">Количество билети: </span>@order.QuentityWine</p>
                                <form asp-action="DeleteWineOrder" asp-route-id="@order.Id" method="post" onsubmit="return confirm('Сигурни ли сте, че искате да изтриете тази поръчка?')">
                                    <input type="submit" value="Изтрий поръчката" />
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
