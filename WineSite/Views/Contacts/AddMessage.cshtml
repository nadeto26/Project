@using WineSite.Core.Models.Contact;
@model AddMessage 
@{
    ViewBag.Title = "Контакти";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<br />
<br />

        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 text-center">
           
                <p class="text-muted mb-5">При въпроси, не се колебайте да ни пишете!</p>
            </div>
        </div>
        <div class="row gx-4 gx-lg-5 justify-content-center mb-5">
            <div class="col-lg-6">
                 
                <!-- https://startbootstrap.com/solution/contact-forms-->

                <form asp-action="AddMessage" method="post">
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label-add-edit">Име</label>
                    <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label-add-edit">Имейл</label>
                    <input asp-for="@Model.Email" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label-add-edit">Телефон</label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label-add-edit">Относно</label>
                    <input asp-for="@Model.About" class="form-control" aria-required="true" />
                    <span asp-validation-for="@Model.About" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Message" class="form-label-add-edit">Съобщение*</label>
                    <textarea asp-for="@Model.Message" class="form-control" aria-required="true" rows="5"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input style="background-color: black; color: #ffffff;" class="btn btn-custom mb-2 w-100 p-3 fw-bold" type="submit" value="Изпрати" />
                </div>
            </form>
        </div>
        </div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
