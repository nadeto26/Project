@using WineSite.Core.Models.Receipt;
@model AllRecipeViewModel
 
    @{
    ViewBag.Title = Model.Name;
}
 
    <div class="text-center custom-div">
    <h2>@ViewBag.Title</h2>
     
</div>

 



<div class="container" style="display:inline">
    <div class="row">
        <div class="col-12">
           
            <img class="img-fluid" src="@Model.ImageUrl" alt="Recipe Image" style="width: 100%;">
        </div>
      
        <div class="card col-8 border-0">
         
            <br />
            <br />
            <h2>Необходими продукти:</h2>
            <ul>
                @foreach (var note in Model.Notes.Split(new[] { "\r\n", "\r", "\n" }, StringSplitOptions.RemoveEmptyEntries))
                {
                    <li>@note</li>
                }
            </ul>
            <br />
            <br />
            <h2>Начин на приготвяне:</h2>
            <p>@Model.Description</p>

        </div>
        <p></p>
        @if (User.IsInRole("Administrator"))
        {
            <a class="btn btn-warning btn-sm" asp-controller="Recipe" asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a>
            <form asp-controller="Recipe" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="ml-2 btn btn-danger btn-sm">Изтрий</button>
            </form>
        }

      


    </div>
</div>

