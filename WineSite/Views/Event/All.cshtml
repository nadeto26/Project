@using WineSite.Core.Models.Event;
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="/css/styles.css" rel="stylesheet" />
<link href="/css/site.css" rel="stylesheet" />
@model IEnumerable<EventsViewModel>
@{
    ViewBag.Title = "Последни събития";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
 


<body>
    <div class="container">
        <!-- За да ограничите ширината на съдържанието -->
        <div class="row">
            <div class="col">
                <!-- Използвайте колони за адаптивност -->
                <center>
                    @*@if (Model.Count() <= 3)
                    {*@
                        @foreach (var evt in Model)
                        {
                            <a href="@Url.Action("Details", "Event", new { id = evt.Id })" class="event-card">
                                <div class="card text-bg-dark position-relative">
                                    <img src="@evt.ImageUrl" class="card-img img-fluid" alt="Event Image">
                                    <div class="card-img-overlay">
                                        <h5 class="card-text">@evt.Name</h5>
                                    </div>
                                </div>
                            </a>
                      @*  }*@
                    }
                </center>
            </div>
        </div>
    </div>
</body>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




