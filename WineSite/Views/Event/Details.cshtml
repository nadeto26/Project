@using WineSite.Core.Models.Event;
@model EventsViewModel

@{
    ViewBag.Title = "Събития детайли";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <center><h1>@Model.Name</h1></center>
        <div class="col-12">
            <img class="img-fluid" src="@Model.ImageUrl" alt="Event Image" style="width: 100%;">
        </div>
        <div class="card col-8 border-0">

            <p>Located in: <b>@Model.Address</b></p>
            <p>@Model.HostName</p>
            <p>@Model.Features</p>
            <p>@Model.Preferences</p>
            <p>@Model.Description</p>
            <p>@Model.PriceTicket</p>
            <p>@Model.Duration</p>
            <p>@Model.Address</p>
            <p>@Model.Description</p>
            <p>@Model.MoreInformation</p>
        </div>
        <p></p>
        @if (User.IsInRole("Administrator"))
        {
            <a class="btn btn-warning btn-sm" asp-controller="Event" asp-action="Edit" asp-route-id="@Model.Id">Редактирай</a>
            <form asp-controller="Event" asp-action="Delete" asp-route-id="@Model.Id" method="post">
                <button type="submit" class="ml-2 btn btn-danger btn-sm">Изтрий</button>
            </form>
        }
       
        <a class="ml-2 btn btn-danger btn-sm" asp-controller="Event" asp-action="AddToCart" asp-route-id="@Model.Id">Запиши се</a>
    </div>
</div>
