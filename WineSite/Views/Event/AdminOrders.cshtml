@using WineSite.Core.Models.Event;
@model IEnumerable<AdminOrdersViewModel>
@{
    ViewBag.Title = "Съобщения, от клиенти";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var a in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@a.FullName</h5>
                <p class="mb-0"><span class="fw-bold">Телефон: </span>@a.PhoneNumber</p>
                <p class="mb-0"><span class="fw-bold">Имейл: </span>@a.PhoneNumber</p>
                <p class="mb-0"><span class="fw-bold">Относно: </span>@a.WholePrice</p>
                <p class="mb-0"><span class="fw-bold">Съобщение: </span>@a.Adress</p>


            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
