@using WineSite.Models.Event;
@model IEnumerable<AddToCartViewModel>
@{
    ViewBag.Title = "Количка";

    // Изчисляване на общата цена, като се вземат предвид цените на всички продукти
    decimal totalPrice = Model.Sum(item => item.PricePerTicket * item.Quentity)/*.GetValueOrDefault()*/;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="row justify-content-center">
            
                <div class="card col-md-4 mb-4">
                    <img class="card-img-top" src="@item.ImageUrl" alt="Product Image">
                    <div class="card-body">
                        <h5 class="card-title">@item.TicketName</h5>
                        <p class="card-text"><span class="fw-bold">Price:</span> @item.PricePerTicket BGN</p>
                    <form asp-controller="Event" asp-action="IncreaseCartItemQuantity" method="post">
                        <input type="hidden" name="eventId" value="@item.EventId" />
                        <input type="hidden" name="userId" value="@User.Identity.Name" /> <!-- Използвайте подходяща логика за идентификация на потребителя -->
                        <button type="submit" class="btn btn-outline-secondary">Увеличи количеството</button>
                    </form>
                        <form asp-controller="Event" asp-action="RemoveFromCart" asp-route-id="@item.Id" method="post">
                            <button type="submit" class="btn btn-danger btn-block fw-bold">Премахни</button>
                        </form>
                    </div>
                </div>
            }
        </div>

        
    } 

</div>

<div class="text-center mt-4">
    <h4>Total Price: <span id="total-price">@totalPrice</span> BGN</h4>
</div>

<form action="@Url.Action("DetailsDelivery", "Event")" method="get">
    <button type="submit" class="btn btn-success">Завърши поръчката</button>
</form>


@section Scripts {
    <script>
        function updateQuantity(itemId, newQuantity) {
            // Изпращане на AJAX заявка за актуализиране на количеството
            $.ajax({
                url: '/Event/UpdateCartItemQuantity', // URL към метода в контролера
                type: 'POST',
                data: { itemId: itemId, quantity: newQuantity },
                success: function (result) {
                    // При успешна заявка може да направите нужните действия
                    console.log('Quantity updated successfully!');
                    // Например, можете да обновите съдържанието на страницата или да изпратите други заявки
                    location.reload(); // Пример за презареждане на страницата след актуализация
                },
                error: function (xhr, status, error) {
                    console.error('Error updating quantity:', error);
                    // Обработка на грешката при актуализирането на количеството
                }
            });
        }
    </script>
    }

