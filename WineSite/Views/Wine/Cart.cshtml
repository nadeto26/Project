@using WineSite.Core.Models.Wine;
@model IEnumerable<WineCart>
@{
    ViewBag.Title = "Количка";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
    @{
         decimal totalPrice = Model.Sum(item => item.Price * item.Quantity);
    }

<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="row justify-content-center"> 

            <div class="card col-md-4 mb-4">
                <img class="card-img-top" src="@item.ImageUrl" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text"><span class="fw-bold">Цена: </span><span style="color: black;">@item.Price лв</span></p>

                    <!-- Показване на количеството и бутони за управление на количеството -->
                    <div>
                        <p>Количество: @item.Quantity</p>
                        <div class="btn-group" role="group" aria-label="Управление на количеството">
                            <form asp-controller="Wine" asp-action="DecreaseQuantity" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-secondary">-</button>
                            </form>
                            <form asp-controller="Wine" asp-action="IncreaseQuantity" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-secondary">+</button>
                            </form>
                        </div>
                    </div>
                </div>

                <form asp-controller="Wine" asp-action="DeleteFromCart" asp-route-id="@item.Id" method="post">
                    <button type="submit" class="btn btn-danger btn-block fw-bold">Премахни</button>
                </form>
            </div>

        </div>
    }
</div>


<div class="text-center mt-4">
    <h4>Обща цена: <span id="total-price">@totalPrice</span> лв.</h4>
</div>

<form action="@Url.Action("DetailsDelivery", "Wine")" method="get">
    <button type="submit" class="btn btn-success">Завърши поръчката</button>
</form>


 
 
