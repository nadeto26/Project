@using WineSite.Core.Models.Wine;
@model AllWinesQuaryModel

@{
    ViewBag.Title = "Вино";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form method="get">
    <div class="row">
        <div class="form-group col-md-3 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="Types">Типове</label>
                <select asp-for="Types" class="form-control">
                    <option value="">Всичко</option>
                    @foreach (var type in Model.Types)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchItem">Търсене по текст</label>
            <input asp-for="SearchItem" class="form-control" placeholder="Търсене">
        </div>

        <div class="form-group col-md-3">
            <div class="form-group">
                <label asp-for="Sorting">Сортиране по цена</label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0">Най-ниска</option>
                    <option value="1">Най-висока</option>
                </select>
            </div>
        </div>

        <div class="col-md-3">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Търси" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalWinesCount /
        AllWinesQuaryModel.WinePerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Wine"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-category="@Model.Type"
           asp-route-searchTerm="@Model.SearchItem"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.Wines.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Wine"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-category="@Model.Type"
           asp-route-searchTerm="@Model.SearchItem"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

@if (!Model.Wines.Any())
{
    <h2 class="text-center">Няма нищо намерено!</h2>
}

<div class="row">
    @foreach (var wine in Model.Wines)
    {
        <partial name="_WinePartial" model="@wine" />
    }
</div>
